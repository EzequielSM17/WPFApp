<Window x:Class="WPFApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource CustomWindowStyle}"
        Title="Registrarse" Height="650" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">

    <Window.InputBindings>
        <KeyBinding Key="Enter" 
                    Command="{Binding RegisterCommand}" 
                    CommandParameter="{Binding ElementName=RegPasswordBox}"/>
    </Window.InputBindings>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="Videogames"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Crear nueva cuenta"
                       FontSize="14"
                       Foreground="{StaticResource TextMutedBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">

            <TextBlock Text="NOMBRE" 
                       FontSize="12" 
                       FontWeight="Bold"
                       Foreground="{StaticResource TextMutedBrush}" 
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     Height="40"
                     Margin="0,0,0,15"/>

            <TextBlock Text="EMAIL" 
                       FontSize="12" 
                       FontWeight="Bold"
                       Foreground="{StaticResource TextMutedBrush}" 
                       Margin="0,0,0,5"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     Height="40"
                     Margin="0,0,0,15"/>

            <TextBlock Text="CONTRASEÑA" 
                       FontSize="12" 
                       FontWeight="Bold"
                       Foreground="{StaticResource TextMutedBrush}" 
                       Margin="0,0,0,5"/>
            <PasswordBox x:Name="RegPasswordBox"
                         Height="40"
                         Margin="0,0,0,25"/>

            <Button Content="REGISTRARSE"
                    Height="45"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding RegisterCommand}"
                    CommandParameter="{Binding ElementName=RegPasswordBox}"/>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#FF5555"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,15,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">

            <TextBlock Text="¿Ya tienes cuenta? " 
                       Foreground="{StaticResource TextMutedBrush}"/>

            <TextBlock Text="Inicia sesión"
                       Foreground="{StaticResource PrimaryBrush}"
                       FontWeight="Bold"
                       TextDecorations="Underline"
                       Cursor="Hand">

                <TextBlock.InputBindings>
                    <MouseBinding MouseAction="LeftClick" 
                                  Command="{Binding NavigateToLoginCommand}"/>
                </TextBlock.InputBindings>

                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryLightBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>