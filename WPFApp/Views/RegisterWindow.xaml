<Window x:Class="WPFApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrarse" Height="380" Width="400"
        WindowStartupLocation="CenterScreen">

    <Window.InputBindings>
        <KeyBinding Key="Enter" 
                    Command="{Binding RegisterCommand}" 
                    CommandParameter="{Binding ElementName=RegPasswordBox}"/>
    </Window.InputBindings>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Videogames - Registro"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <TextBlock Text="Nombre"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Email"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Contraseña"/>
            <PasswordBox x:Name="RegPasswordBox"/>

            <Button Content="Registrarse"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Width="140"
                    Command="{Binding RegisterCommand}"
                    CommandParameter="{Binding ElementName=RegPasswordBox}"/>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       TextWrapping="Wrap"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0">
            <TextBlock Text="¿Ya tienes cuenta? " />

            <TextBlock Text="Inicia sesión"
                       Foreground="Blue"
                       TextDecorations="Underline"
                       Cursor="Hand">
                <TextBlock.InputBindings>
                    <MouseBinding MouseAction="LeftClick" 
                                  Command="{Binding NavigateToLoginCommand}"/>
                </TextBlock.InputBindings>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>