<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="ColorPrimary">#FF8C00</Color>
    <Color x:Key="ColorPrimaryLight">#FFA500</Color>
    <Color x:Key="ColorBackground">#121212</Color>
    <Color x:Key="ColorSurface">#1E1E1E</Color>
    <Color x:Key="ColorTextMain">#FFFFFF</Color>
    <Color x:Key="ColorTextMuted">#AAAAAA</Color>
    <Color x:Key="ColorBorder">#333333</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource ColorPrimary}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource ColorPrimaryLight}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource ColorBackground}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource ColorSurface}"/>
    <SolidColorBrush x:Key="TextMainBrush" Color="{StaticResource ColorTextMain}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource ColorTextMuted}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource ColorBorder}"/>

</ResourceDictionary>