<UserControl x:Class="WPFApp.Views.Controls.NavBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="50">
    <Border Background="#222">
        <DockPanel>
            <TextBlock Text="Videogames"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="10,0"
                       VerticalAlignment="Center"/>
            <DockPanel>
                <TextBlock Text="{Binding UserEmail}"
                   Foreground="LightGray"
                   FontSize="14"
                   Margin="10,0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   DockPanel.Dock="Right"/>
                
                <Button Width="40"
                        
                Background="LightGray"
                Height="40"
                Margin="10,0"
                DockPanel.Dock="Right"
                BorderThickness="0"
                ToolTip="Cambiar persistencia"
                Command="{Binding TogglePersistenceCommand}">
                        <Image Source="{Binding PersistenceIcon}"
                   Width="26"
                   Height="26"/>    
                </Button>
                
            </DockPanel>
            
        </DockPanel>
    </Border>
</UserControl>