<UserControl x:Class="WPFApp.Views.Controls.NavBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="60">

    <Border Background="{DynamicResource SurfaceBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1">

        <Grid Margin="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" >
                <Image Source="/Assets/app_icon.png" Width="40" Height="40" Margin="0,0,10,0"/>
                <TextBlock 
                           Text="VIDEOGAMES"
                           Foreground="{StaticResource PrimaryBrush}"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           />
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                <TextBlock Text="{Binding UserEmail}"
                           Foreground="{StaticResource TextMutedBrush}"
                           FontSize="14"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <Button 
                    Background="{Binding MicBackground}" 
                    ToolTip="Control por voz"
                    Command="{Binding ToggleVoiceCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource NavIconButtonStyle}">
                            <Style.Triggers>

                                <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="Opacity" Value="0.5"/>
                                    <Setter Property="Cursor" Value="Arrow"/>
                                </DataTrigger>

                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image Source="{Binding MicIcon}" 
                       Width="20" Height="20"
                       Style="{StaticResource SpinningImageStyle}"/>
                </Button>

                <Button Style="{StaticResource NavIconButtonStyle}"
                        ToolTip="Cambiar persistencia"
                        Command="{Binding TogglePersistenceCommand}">
                    <Image Source="{Binding PersistenceIcon}" Width="22" Height="22"/>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>