<UserControl x:Class="WPFApp.Views.Controls.PaginationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,10">

        <Button Content="Anterior"
                Width="90"
                Margin="5"
                Command="{Binding PrevPageCommand}"/>

        <ItemsControl ItemsSource="{Binding PageNumbers}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding}"
                            Margin="2"
                            Padding="6,3"
                            Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}, Path=DataContext.LoadPageCommand}"
                            CommandParameter="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Button Content="Siguiente"
                Width="90"
                Margin="5"
                Command="{Binding NextPageCommand}"/>
    </StackPanel>
</UserControl>