<UserControl x:Class="WPFApp.Views.Controls.SidebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="180">
    <Border Background="#2D2D2D">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" >
                <TextBlock Text="Acciones"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                <Button Content="Crear juego"
                        Height="32"
                        Command="{Binding CreateGameCommand}"/>
            </StackPanel>

            <Button Grid.Row="2"
                    Content="Cerrar sesión"
                    Height="32"
                    Background="#CC0000"
                    Foreground="White"
                    FontWeight="Bold"
                    HorizontalAlignment="Stretch"
                    Command="{Binding LogoutCommand}"/>
        </Grid>
    </Border>
</UserControl>