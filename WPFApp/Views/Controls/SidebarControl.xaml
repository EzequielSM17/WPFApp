<UserControl x:Class="WPFApp.Views.Controls.SidebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200">
    <Border Background="{DynamicResource SurfaceBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,1,0">

        <Grid Margin="15,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="ACCIONES"
                           Foreground="{StaticResource TextMutedBrush}"
                           FontSize="12"
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <Button Content="CREAR JUEGO"
                        Height="40"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding CreateGameCommand}"/>
            </StackPanel>

            <Button Grid.Row="2"
        Content="CERRAR SESIÓN"
        Height="40"
        Background="Transparent"
        Foreground="#FF5555" 
        BorderBrush="#FF5555"
        BorderThickness="1"
        Cursor="Hand"
        FontWeight="SemiBold"
        Command="{Binding LogoutCommand}">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF5555"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#CC0000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</UserControl>