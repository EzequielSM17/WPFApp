<UserControl x:Class="WPFApp.Views.Controls.FilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="{DynamicResource SurfaceBrush}" 
            Padding="15,10"
            CornerRadius="8"
            Margin="10,0,10,5">

        <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">

            <StackPanel Margin="0,0,15,0">
                <TextBlock Text="TÍTULO" 
                           Foreground="{StaticResource TextMutedBrush}" 
                           FontWeight="Bold" 
                           FontSize="11" 
                           Margin="0,0,0,5"/>
                <TextBox Width="160" Height="35" 
                         Text="{Binding FilterTitle, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Margin="0,0,15,0">
                <TextBlock Text="CATEGORÍA" 
                           Foreground="{StaticResource TextMutedBrush}" 
                           FontWeight="Bold" 
                           FontSize="11" 
                           Margin="0,0,0,5"/>
                <TextBox Width="130" Height="35" 
                         Text="{Binding FilterCategory, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Margin="0,0,15,0">
                <TextBlock Text="DESDE" 
               Foreground="{StaticResource TextMutedBrush}" 
               FontWeight="Bold" 
               FontSize="11" 
               Margin="0,0,0,5"/>

                <DatePicker Width="130" Height="35" 
                SelectedDate="{Binding FilterFromDate}"
                Style="{StaticResource DarkDatePickerStyle}"
                ToolTip="Seleccionar fecha de inicio"
                VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Margin="0,0,15,0">
                <TextBlock Text="HASTA" 
               Foreground="{StaticResource TextMutedBrush}" 
               FontWeight="Bold" 
               FontSize="11" 
               Margin="0,0,0,5"/>

                <DatePicker Width="130" Height="35" 
                SelectedDate="{Binding FilterToDate}"
                Style="{StaticResource DarkDatePickerStyle}"
                ToolTip="Seleccionar fecha de fin"
                VerticalContentAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">

                <Button Content="BUSCAR" 
                        Width="90" Height="35" Margin="0,0,10,0"
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding SearchCommand}"/>

                <Button Content="LIMPIAR" 
                        Width="90" Height="35"
                        Background="Transparent"
                        Foreground="{StaticResource TextMutedBrush}"
                        BorderBrush="{StaticResource TextMutedBrush}"
                        BorderThickness="1"
                        Cursor="Hand"
                        Command="{Binding ClearFiltersCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="1" 
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                  TextBlock.FontWeight="SemiBold"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

        </WrapPanel>
    </Border>
</UserControl>