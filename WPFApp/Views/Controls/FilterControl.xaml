<UserControl x:Class="WPFApp.Views.Controls.FilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="#333" Padding="10">
        <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">

            <StackPanel Margin="0,0,15,5">
                <TextBlock Text="Título" Foreground="White" FontSize="12"/>
                <TextBox Width="150" Height="25" 
                         Text="{Binding FilterTitle, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Margin="0,0,15,5">
                <TextBlock Text="Categoría" Foreground="White" FontSize="12"/>
                <TextBox Width="120" Height="25" 
                         Text="{Binding FilterCategory, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <StackPanel Margin="0,0,15,5">
                <TextBlock Text="Desde" Foreground="White" FontSize="12"/>
                <DatePicker Width="120" Height="25" 
                            SelectedDate="{Binding FilterFromDate}"/>
            </StackPanel>

            <StackPanel Margin="0,0,15,5">
                <TextBlock Text="Hasta" Foreground="White" FontSize="12"/>
                <DatePicker Width="120" Height="25" 
                            SelectedDate="{Binding FilterToDate}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,5">
                <Button Content="Buscar" 
                        Width="80" Height="25" Margin="0,0,10,0"
                        Background="#007ACC" Foreground="White" FontWeight="Bold"
                        Command="{Binding SearchCommand}"/>

                <Button Content="Limpiar" 
                        Width="80" Height="25"
                        Command="{Binding ClearFiltersCommand}"/>
            </StackPanel>

        </WrapPanel>
    </Border>
</UserControl>