<Window x:Class="WPFApp.GameEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" Height="500" Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding WindowTitle}"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Título"/>
                <TextBox Text="{Binding EditableGame.Title, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Publisher"/>
                <TextBox Text="{Binding EditableGame.Publisher}"/>

                <TextBlock Text="Developer"/>
                <TextBox Text="{Binding EditableGame.Developer}"/>

                <TextBlock Text="Categoría"/>
                <TextBox Text="{Binding EditableGame.Category}"/>

                <TextBlock Text="Amount"/>
                <TextBox Text="{Binding EditableGame.Amount}"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Activo" Margin="0,0,10,0"/>
                    <CheckBox IsChecked="{Binding EditableGame.IsActive}"/>
                </StackPanel>

                <TextBlock Text="URL imagen" Margin="0,10,0,0"/>
                <TextBox Text="{Binding EditableGame.UrlImagen}"/>

                <TextBlock Text="Fecha lanzamiento"/>
                <DatePicker SelectedDate="{Binding EditableGame.ReleaseDate}"/>

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Guardar"
                            Width="80"
                            Margin="0,0,10,0"
                            Command="{Binding SaveCommand}"/>

                    <Button Content="Cancelar"
                            Width="80"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>